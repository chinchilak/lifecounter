ScreenManager:
    HomeScreen:
        name: 'home'
    SettingsScreen:
        name: 'settings'
    MainScreen:
        name: 'main'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Life Counter App'
            font_size: 36
        Button:
            text: 'Go to Main'
            font_size: 24
            on_release: app.root.current = 'main'
        Button:
            text: 'Go to Settings'
            font_size: 24
            on_release: app.root.current = 'settings'

        GridLayout:
            cols: 2
            spacing: 20

            Label:
                id: result_label_0
                font_size: 24
                text: ''
                color: 0, 0, 0, 1

            Label:
                id: result_label_1
                font_size: 24
                text: ''
                color: 0, 0, 0, 1

            Label:
                id: result_label_2
                font_size: 24
                text: ''
                color: 0, 0, 0, 1

            Label:
                id: result_label_3
                font_size: 24
                text: ''
                color: 0, 0, 0, 1
        Button:
            text: 'Roll Dice'
            font_size: 24
            on_release: root.roll_dice()

        Label:
            id: coin_flip
            font_size: 24
            text: ''
            color: 1, 1, 1, 1
        Button:
            text: 'Coin Flip'
            font_size: 24
            on_release: root.coin_flip()

        Button:
            text: 'Exit'
            font_size: 24
            on_release: app.exit_app()

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Go to Main'
            font_size: 24
            on_release: app.root.current = 'main'
        Button:
            text: 'Go to Settings'
            font_size: 24
            on_release: app.root.current = 'settings'
        Button:
            text: 'Rotate'
            font_size: 24
            on_release: app.toggle_rotation()

        ToggleButton:
            id: toggle_button
            text: 'Toggle Buttons'
            font_size: 24
            on_press: root.toggle_buttons()

        BoxLayout:
            id: overlay_layout
            orientation: 'vertical'
            opacity: 0
            size_hint_y: None
            height: 0
            
            Button:
                text: 'Button 1'
            
            Button:
                text: 'Button 2'
            
            Button:
                text: 'Button 3'
            
            Button:
                text: 'Button 4'

<MainScreen>:
    RelativeLayout:
        Button:
            size_hint: None, None
            size: 40, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: app.root.current = 'home'
# Main life counters
        Label:
            id: top_left_label
            text: str(root.values['top_left_label'])
            font_size: 192
            bold: True
            color: root.font_color
            size_hint: None, None
            size: self.texture_size[0] + 40, self.texture_size[1] + 40
            pos_hint: {'center_x': 0.25, 'center_y': 0.75}
            on_touch_up:
                if self.collide_point(*args[1].pos): root.increment_value('top_left_label')
            canvas.before:
                Color:
                    rgba: root.color_top_left
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: top_right_label
            text: str(root.values['top_right_label'])
            font_size: 192
            bold: True
            color: root.font_color
            size_hint: None, None
            size: self.texture_size[0] + 40, self.texture_size[1] + 40
            pos_hint: {'center_x': 0.75, 'center_y': 0.75}
            on_touch_up:
                if self.collide_point(*args[1].pos): root.increment_value('top_right_label')
            canvas.before:
                Color:
                    rgba: root.color_top_right
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: bottom_left_label
            text: str(root.values['bottom_left_label'])
            font_size: 192
            bold: True
            color: root.font_color
            size_hint: None, None
            size: self.texture_size[0] + 40, self.texture_size[1] + 40
            pos_hint: {'center_x': 0.25, 'center_y': 0.25}
            on_touch_up:
                if self.collide_point(*args[1].pos): root.increment_value('bottom_left_label')
            canvas.before:
                Color:
                    rgba: root.color_bottom_left
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: bottom_right_label
            text: str(root.values['bottom_right_label'])
            font_size: 192
            bold: True
            color: root.font_color
            size_hint: None, None
