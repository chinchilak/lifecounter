            canvas.before:
                Color:
                    rgba: root.color_bottom_right
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 1
                    points: self.texture_size[0], self.texture_size[1], self.x, self.texture_size[1], self.x, self.y, self.texture_size[0], self.y, self.texture_size[0], self.texture_size[1]
# Sub cmd dmg life counters - top left
